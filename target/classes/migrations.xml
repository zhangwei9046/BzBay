<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

<changeSet id="" author="mbon">
    <createTable tableName="Item">
         <column name="itemId" type="bigint" autoIncrement="true">
            <constraints primaryKey="true" nullable="false"></constraints>
        </column>
        <column name="name" type="varchar(255)">
            <constraints nullable="false"></constraints>
        </column>
        <column name="sellerId" type="bigint">
            <constraints nullable="false"></constraints>
        </column>
        <column name="buyerId" type="bigint">
            <constraints nullable="false"></constraints>
        </column>
        <column name="isBidded" type="boolean">
            <constraints nullable="false"></constraints>
        </column>
        <column name="model" type="varchar(255)">
            <constraints nullable="false"></constraints>
        </column>
        <column name="shipping" type="varchar(255)">
            <constraints nullable="false"></constraints>
        </column>
        <column name="category"
                type="enum('Entertainment', 'Computers', 'WearableTech',
                'MusicalInstruments')">
            <constraints foreignKey="true" nullable="false"></constraints>
        </column>
        <column name="initialPrice" type="float">
            <constraints nullable="false"></constraints>
        </column>
        <column name="finalPrice" type="float">
            <constraints nullable="false"></constraints>
        </column>
        <column name="startDate" type="datetime">
            <constraints nullable="false"></constraints>
        </column>
        <column name="endDate" type="datetime">
            <constraints nullable="false"></constraints>
        </column>
        <column name="image" type="varchar(255)">
            <constraints nullable="false"></constraints>
        </column>
        <column name="description" type="varchar(255)">
        </column>
        <column name="condition" type="boolean">
            <constraints nullable="false"></constraints>
        </column>
    </createTable>
</changeSet>